{
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 3,
        "lineWidth": 80,
        "attributePosition": "auto",
        "formatWithErrors": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConsoleLog": "error"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error"
            }
        }
    }
}